@model PMG_s_Game_Repo.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div style="max-width:400px; margin:50px auto; border:1px solid #ddd; padding:20px; border-radius:8px;">
    <h2>Create Account</h2>

    <form asp-action="Register" method="post">
        <div>
            <label>Email</label><br />
            <input asp-for="Email" style="width:100%; padding:8px;" />
            <span asp-validation-for="Email" style="color:red;"></span>
        </div>

        <div style="margin-top:10px;">
            <label>Password</label><br />
            <input asp-for="Password" type="password" style="width:100%; padding:8px;" />
            <span asp-validation-for="Password" style="color:red;"></span>
        </div>

        <div style="margin-top:10px;">
            <label>Confirm Password</label><br />
            <input asp-for="ConfirmPassword" type="password" style="width:100%; padding:8px;" />
            <span asp-validation-for="ConfirmPassword" style="color:red;"></span>
        </div>

        <button type="submit" style="margin-top:20px; width:100%; padding:10px; background:#28a745; color:white; border:none; border-radius:5px;">
            Register
        </button>
    </form>
</div>
