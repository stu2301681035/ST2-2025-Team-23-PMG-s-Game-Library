@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<div id="easterEggContainer" style="display: none; position: fixed; bottom: -200px; left: 50%; transform: translateX(-50%); z-index: 10000; transition: bottom 2s ease-in-out;">
    <img id="easterEggImage" src="/images/easter-egg.jpg" alt="Easter Egg!" style="max-width: 200px; max-height: 200px;" />
</div>

<script>
        // Konami Code Easter Egg
    (function() {
        const konamiCode = [
            'ArrowUp', 'ArrowUp',
            'ArrowDown', 'ArrowDown',
            'ArrowLeft', 'ArrowRight',
            'ArrowLeft', 'ArrowRight',
            'KeyB', 'KeyA'
        ];

        let konamiIndex = 0;
        let easterEggTriggered = false;

        document.addEventListener('keydown', function(e) {
            // Reset if wrong key or if already triggered
            if (e.code !== konamiCode[konamiIndex]) {
                konamiIndex = 0;
                return;
            }

            konamiIndex++;

            // Check if complete code entered
            if (konamiIndex === konamiCode.length && !easterEggTriggered) {
                triggerEasterEgg();
                easterEggTriggered = true;

                // Reset after some time to allow triggering again
                setTimeout(() => {
                    easterEggTriggered = false;
                }, 5000);
            }
        });

        function triggerEasterEgg() {
            const container = document.getElementById('easterEggContainer');
            const image = document.getElementById('easterEggImage');

            if (!container || !image) return;

            // Show and animate the image
            container.style.display = 'block';

            // Animate up
            setTimeout(() => {
                container.style.bottom = '50px';

                // Animate back down after a delay
                setTimeout(() => {
                    container.style.bottom = '-200px';

                    // Hide after animation completes
                    setTimeout(() => {
                        container.style.display = 'none';
                    }, 2000);
                }, 3000); // Stay visible for 3 seconds

            }, 100);
        }
    })();
</script>