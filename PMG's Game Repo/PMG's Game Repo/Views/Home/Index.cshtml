@using PMG_s_Game_Repo.ViewModels
@using Microsoft.AspNetCore.Components.Web
@model GameListViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="home-statistics" style="text-align:center; padding:50px; max-width:900px; margin:auto; margin-top:15px">
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <h1>🎮 Welcome back, @User.Identity.Name!</h1>
        <p style="font-size:18px; color:white;">Your personal game library</p>
    }
    else
    {
        <h1>🎮 Welcome to the Game Library</h1>
        <p style="font-size:18px; color:#666;">Track your favorite games, discover new titles, and connect with players.</p>
    }

    <!-- Statistics Section -->
    <div style="display:flex; justify-content:center; flex-wrap:wrap; gap:40px; margin-top:40px;">
        <div style="flex:1 1 250px; border:1px solid #ccc; padding:20px; border-radius:10px; box-shadow:0 2px 8px rgba(0,0,0,0.9);">
            <h3 style="color:white">👥 Users</h3>
            <p style="font-size:28px; font-weight:bold;">@ViewBag.UserCount</p>
        </div>

        <div style="flex:1 1 250px; border:1px solid #ccc; padding:20px; border-radius:10px; box-shadow:0 2px 8px rgba(0,0,0,0.05);">
            <h3 style="color:white">🎮 Games Available</h3>
            <p style="font-size:28px; font-weight:bold;">@ViewBag.GameCount</p>
        </div>

        <div style="flex:1 1 250px; border:1px solid #ccc; padding:20px; border-radius:10px; box-shadow:0 2px 8px rgba(0,0,0,0.05);">
            <h3 style="color:white">📚 Games in Library</h3>
            <p style="font-size:28px; font-weight:bold;">@ViewBag.LibraryCount</p>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const fadeElements = document.querySelectorAll('.home-statistics');

        fadeElements.forEach(element => {
            element.classList.add('visible');
        });
    });
</script>