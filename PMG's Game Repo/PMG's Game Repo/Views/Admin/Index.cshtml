@using PMG_s_Game_Repo.Models
@model IEnumerable<User>

<h2>🛠️ Admin Dashboard</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<table class="table" style="color:white">
    <thead>
        <tr>
            <th>Profile</th>
            <th>Email</th>
            <th>Admin</th>
            <th>Banned</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><img src="@user.ProfilePictureUrl" width="50" style="border-radius:50%;" /></td>
                <td>@user.Email</td>
                <td>@user.IsAdmin</td>
                <td>@user.IsBanned</td>
                <td>
                    <form asp-action="ToggleBan" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-@(user.IsBanned ? "success" : "warning") btn-sm">
                            @(user.IsBanned ? "Unban" : "Ban")
                        </button>
                    </form>
                    <form asp-action="ToggleAdmin" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-secondary btn-sm">Toggle Admin</button>
                    </form>
                    <form asp-action="DeleteUser" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
