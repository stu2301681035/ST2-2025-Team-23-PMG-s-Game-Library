@model PMG_s_Game_Repo.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div style="max-width:600px; margin:auto; text-align:center; padding:40px;">
    <h2>🔒 Change Password</h2>

    <form asp-action="ChangePassword" method="post" style="margin-top:30px;">
        <div style="margin-bottom:15px;">
            <label><p>Current Password</p></label><br />
            <input asp-for="CurrentPassword" type="password" style="width:100%; padding:8px;" />
            <span asp-validation-for="CurrentPassword" style="color:red; font-size:12px;"></span>
        </div>

        <div style="margin-bottom:15px;">
            <label><p>New Password</p></label><br />
            <input asp-for="NewPassword" type="password" style="width:100%; padding:8px;" />
            <span asp-validation-for="NewPassword" style="color:red; font-size:12px;"></span>
        </div>

        <div style="margin-bottom:15px;">
            <label><p>Confirm New Password</p></label><br />
            <input asp-for="ConfirmPassword" type="password" style="width:100%; padding:8px;" />
            <span asp-validation-for="ConfirmPassword" style="color:red; font-size:12px;"></span>
        </div>

        <button type="submit" style="padding:10px 20px; background:#007bff; color:white; border:none; border-radius:5px;">Change Password</button>
    </form>

    <div style="margin-top:30px;">
        <a href="/Account/Dashboard" style="display:inline-block; padding:10px 20px; background:#6c757d; color:white; text-decoration:none; border-radius:5px;">Back to Dashboard</a>
    </div>
</div>