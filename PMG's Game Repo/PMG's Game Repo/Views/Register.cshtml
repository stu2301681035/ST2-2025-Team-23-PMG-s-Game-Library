@model PMG_s_Game_Repo.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="bg-white p-8 rounded-xl shadow-md w-full max-w-md">
        <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Create Account</h2>

        <form asp-action="Register" method="post">
            <div class="mb-4">
                <label class="block text-gray-700">Email</label>
                <input asp-for="Email" class="mt-1 w-full border-gray-300 rounded-lg shadow-sm p-2" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700">Password</label>
                <input asp-for="Password" type="password" class="mt-1 w-full border-gray-300 rounded-lg shadow-sm p-2" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-6">
                <label class="block text-gray-700">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="mt-1 w-full border-gray-300 rounded-lg shadow-sm p-2" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-green-600 text-white py-2 rounded-lg hover:bg-green-700">Register</button>
        </form>
    </div>
</div>
