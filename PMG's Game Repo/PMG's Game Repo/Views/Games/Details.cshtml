@model RawgGameDetailsDto
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.Background_Image" alt="@Model.Name" class="img-fluid rounded shadow" />
        </div>

        ```
        <div class="col-md-7">
            <h2>@Model.Name</h2>
            <p><strong>Released:</strong> @Model.Released</p>
            <p><strong>Rating:</strong> ⭐ @Model.Rating</p>

            <p>
                <strong>Genres:</strong>
                @if (Model.Genres != null && Model.Genres.Any())
                {
                    @string.Join(", ", Model.Genres.Select(g => g.Name))
                }
                else
                {
                    <span>None</span>
                }
            </p>

            <p>
                <strong>Platforms:</strong>
                @if (Model.Platforms != null && Model.Platforms.Any())
                {
                    @string.Join(", ", Model.Platforms.Select(p => p.Platform.Name))
                }
                else
                {
                    <span>None</span>
                }
            </p>

            <hr />

            <div>
                @Html.Raw(Model.Description ?? "No description available.")
            </div>

            <div class="mt-4">
                <a href="@Url.Action("Index", "Games")" class="btn btn-secondary">
                    ⬅ Back to Games
                </a>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form class="d-inline-block" asp-controller="Favorites" asp-action="Add" method="post">
                        <input type="hidden" name="gameId" value="@Model.Id" />
                        <button id="favoriteButton" class="btn btn-primary ms-2" type="submit">
                            ➕ Add to Library
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>

    @if (Model.Screenshots != null && Model.Screenshots.Any())
    {
        <hr />
        <h4 class="mt-4">Screenshots</h4>
        <div class="row">
            @foreach (var shot in Model.Screenshots)
            {
                <div class="col-md-3 mb-3">
                    <img src="@shot.Image" class="img-fluid rounded shadow-sm" />
                </div>
            }
        </div>
    }
    ```

</div>

@section Scripts {
    <script>
        // Fetch whether the game is already favorited
        fetch(`/Favorites/IsFavorite?gameId=@Model.Id`)
        .then(res => res.json())
        .then(data => {
        const btn = document.getElementById("favoriteButton");
        if (!btn) return;

                    if (data.isFavorite) {
                        btn.textContent = "❌ Remove from Library";
                        btn.classList.remove("btn-primary");
                        btn.classList.add("btn-danger");
                    } else {
                        btn.textContent = "➕ Add to Library";
                        btn.classList.remove("btn-danger");
                        btn.classList.add("btn-primary");
                    }
                });
    </script>

}
